							<div class="card-img"><img src="{{image}}" alt=""></div>
						</div>
					</div>
					<div class="col-xl-6 col-lg-6 col-md-12">
						<div class="wrap__cards-card">
							<h2 class="card-title">{{title}}</h2>
							<p>{{description}}</p>
						</div>
					</div>
					{{else}}
