		</div>
	</div>
</section><!-- buy end --><!-- contact start -->
<section id="contact">
	<div class="container">
		<div class="contact-wrap">
			<div class="contact__title-block">
				<h1 class="title">остались вопросы?</h1>
				<p>*поля обязательные для заполнения</p>
			</div>
			<form action="/send/message" class="contact-wrap__form" method="post">
				<div class="row g-2">
					<div class="col-xl-4 col-sm-4"><input type="text" placeholder="Ваше имя*" required name="name"></div>
					<div class="col-xl-4 col-sm-4"><input type="number" placeholder="Телефон*" required name="phone"></div>
					<div class="col-xl-4 col-sm-4"><input type="email" placeholder="Email" required name="email"></div>
					<div class="col-xl-12"><textarea required placeholder="Задайте Ваш вопрос" name="message"></textarea></div>
					<div class="col-xl-12"><button type="submit" class="form-submit__btn">Отправить заявку</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</section><!-- contact end --><!-- footer start -->

<script>
	document.querySelectorAll('#region-menu li').forEach(function (item) {
		item.addEventListener('click', function () {
			var regionId = this.getAttribute('data-region-id');
			if (regionId) {
				fetch('/api/region/' + regionId + '/numbers')
					.then(response => response.json())
					.then(data => {
						var numbersList = document.querySelector('.big-number__countr .number_menu');
						numbersList.innerHTML = ''; // Avvalgi ma'lumotlarni tozalaymiz

						data.forEach(function (number) {
							var li = document.createElement('li');
							li.textContent = number.number; // Bu yerda "number" regionga tegishli raqamlardan biridir
							numbersList.appendChild(li);
						});
					})
					.catch(error => {
						console.error('Error:', error);
					});
			}
		});
	});
</script>